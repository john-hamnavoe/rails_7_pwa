<li class="flex py-4">
  <%= link_to login_path(params: {id: user.id}), data: {turbo_method: :post}, class:"-m-3 flex items-center rounded-lg p-3 hover:bg-gray-50" do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-10 h-10 rounded-full">
