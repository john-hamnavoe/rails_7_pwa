<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="border-b border-gray-200 bg-white py-5 md:w-1/2">
    <h3 class="text-lg font-medium leading-6 text-gray-900">Roles</h3>
  </div>
  <ul role="list" class="divide-y divide-gray-200 md:w-1/2">
    <%= render @users %>
  </ul>

  <%= link_to "<- Home", root_path,  class: "text-base font-semibold text-indigo-600 hover:text-indigo-500"%>  
</div>
